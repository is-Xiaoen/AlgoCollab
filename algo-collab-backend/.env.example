# 应用配置
APP_NAME=AlgoCollab
APP_ENV=development
APP_PORT=8080
APP_DEBUG=true

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=algocollab
DB_USER=algocollab_user
DB_PASSWORD=your_secure_password
DB_SSL_MODE=disable

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 配置
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE_HOURS=24

# 日志配置
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# CORS 配置
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Origin,Content-Type,Accept,Authorization

# 代码执行服务配置
CODE_RUNNER_ENDPOINT=http://localhost:9000
CODE_RUNNER_TIMEOUT=30

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,text/plain,application/pdf

# WebSocket 配置
WS_READ_BUFFER_SIZE=1024
WS_WRITE_BUFFER_SIZE=1024
WS_MAX_MESSAGE_SIZE=512000

# 监控配置
METRICS_ENABLED=true
METRICS_PORT=9090

# 邮件配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@algocollab.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=AlgoCollab <noreply@algocollab.com>